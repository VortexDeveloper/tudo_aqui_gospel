<!-- Category Page Content -->
<section id="rst-catcontent-author">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <!-- Author zone -->
        <div class="rst-section-title rst-section-title-box">
          <h4><%= @curriculum.title %></h4>
        </div>
        <div class="rst-author-contact">
          <% if @curriculum.subscriber.avatar.present? %>
            <%= image_tag @curriculum.subscriber.avatar.url(:medium) %>
          <% else %>
            <img src="../images/user.png" alt="" />
          <% end %>
          <div class="rst-author-contactinfo">
            <p>
              <a>
                <i class="fa fa-user"></i>
                <span>
                  <%= @curriculum.subscriber.user.profile.name || "Usuário anônimo" %>
                </span>
              </a>
              <a href="tel:+48 122 33 66"><i class="fa fa-mobile"></i> <span>+48 122 33 66</span></a>
              <a><i class="fa fa-paper-plane"></i> <span><%= @curriculum.subscriber.user.email %></span></a>
            </p>
          </div>
        </div>
        <p class="rst-author-excerpt"><%= @curriculum.description %></p>
        <p class="rst-author-excerpt">
          <h3>Veja o currículo</h3>
          <i class="fa fa-file-pdf-o" aria-hidden="true"></i> <%= link_to @curriculum.file.instance.file_file_name, @curriculum.file.url, target: '_blank' %>
        </p>
        <!-- End zone -->
      </div>
    </div>
  </div>
</section>
