<!-- Section Register -->
<section id="rst-account-page">
  <div class="container">
    <div class="row">
      <%= form_for(ad) do |f| %>
        <% if ad.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(ad.errors.count, "error") %> prohibited this ad from being saved:</h2>

            <ul>
            <% ad.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
        <div class="col-sm-8">
          <div class="rst-section-title rst-section-title-box">
            <h4>Dados do Anuncio</h4>
          </div> <!-- end section title -->
          <div class="rst-accsetting">
            <div class="rst-account-setting">
              <div class="rst-setting">
                <span><%= f.label :title, "Título do anúncio" %></span>
                <%= f.text_field :title, value: @ad.title, class: 'rst-pageinput' %>
              </div>
              <div class="rst-setting">
                <span><%= f.label :description, "Breve Descrição" %></span>
                <%= f.text_field :description, value: @ad.description, class: 'rst-pageinput' %>
              </div>
              <div class="rst-setting">
                <span><%= f.label :text_description, "Descrição completa" %></span>
                <%= f.text_field :text_description, value: @ad.text_description, class: 'rst-pageinput' %>
              </div>
              <div class="rst-setting">
                <span><%= f.label :link, "Link para o anuncio em sua página" %></span>
                <%= f.text_field :link, value: @ad.link, class: 'rst-pageinput' %>
              </div>
              <div class="rst-setting">
                <span><%= f.label :state, "Estado" %></span>
                <%= f.select(:state, [states_for_select], {selected: @personal_profile.state_id}, { :class => 'rst-pageinput' }) %>
              </div>
              <div class="rst-setting">
                <span><%= f.label :city, "Cidade" %></span>
                <%= f.select(:city, [cities_for_select], {selected: @personal_profile.city_id}, { :class => 'rst-pageinput' }) %>
              </div>
              <div class="rst-setting">
                <span><%= f.label :zip_code, "CEP" %></span>
                <%= f.text_field :zip_code, value: @personal_profile.zip_code, class: 'rst-pageinput' %>
                <%= hidden_field_tag :id, @personal_profile.id %>
              </div>
              <%= f.submit "SALVAR ALTERAÇÕES", class: 'rst-pagebutton' %>
            </div>
          </div>
        </div>
        <div class="col-sm-4">
          <div class="rst-section-title rst-section-title-box">
            <h4>Ofertas</h4>
          </div> <!-- end section title -->
          <aside class="widget widget_adv">
            <a href="#"><%=  image_tag('ad01.png') %></a>
            <a href="#"><%=  image_tag('ad01.png') %></a>
            <a href="#"><%=  image_tag('ad01.png') %></a>
            <a href="#"><%=  image_tag('ad01.png') %></a>
            <a href="#"><%=  image_tag('ad01.png') %></a>
            <a href="#"><%=  image_tag('ad01.png') %></a>
            <div class="clear"></div>
          </aside>
      <% end %>
    </div>
  </div>
</section>
<!-- End Section Register -->
