<!-- Section Register -->
<section id="rst-account-page">
  <div class="container">
    <div class="row">
        <div class="col-sm-8">
          <div class="rst-section-title rst-section-title-box">
            <%= link_to @ad.announcer do %>
              <h4><%= @ad.announcer.fantasy_name %></h4>
            <% end %>
          </div> <!-- end section title -->
          <div class="rst-newsandhot-post">
						<div class="rst-newsandhot-post-content">
              <article>
                <div class="row">
                  <div class="rst-postpic col-sm-6">
                    <%= image_tag @ad.avatar.url(:medium) %>
                    <span class="money rst-postpic-cat" data-price='<%= @ad.price %>'></span>
                  </div>
                  <div class="rst-postinfo col-sm-6">
                    <h6><%= @ad.title %></h6>
                    <time><i class="fa fa-clock-o"></i><%= @ad.created_at %></time>
                    <p><%= @ad.text_description %></p>
                  </div>
                </div>
              </article>
            </div>
          </div>
        </div>
        <div class="col-sm-4">
          <div class="rst-section-title rst-section-title-box">
            <h4>Outros anuncios de <%= @ad.announcer.fantasy_name %></h4>
          </div> <!-- end section title -->
          <aside class="widget widget_adv">
            <% @ad.announcer.ads.each do |ad| %>
              <%= link_to ad, class: 'photobox-170x170' do %>
                <%= image_tag ad.avatar(:medium) %>
              <% end %>
            <% end %>
            <div class="clear"></div>
          </aside>
        </div>
  </div>
</section>
<!-- End Section Register -->
