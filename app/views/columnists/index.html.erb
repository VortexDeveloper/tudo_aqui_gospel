<div class="container">
  <div class="row">
    <div class="col-sx-12">
      <div class="rst-section-title rst-section-title-box">
        <h4>Nossos Colunistas</h4>
      </div>
      <% if @columnists.present? %>
        <% @columnists.each do |columnist|%>
          <div class="columnists">
            <%= link_to columnist, class: 'photobox-50x50' do %>
              <%= if columnist.avatar.present?
                    image_tag columnist.avatar.url(:large)
                  else
                    image_tag ('user.png')
                  end
                %>
            <% end %>
            <% if columnist.columnist_title != nil %>
              <strong><%= columnist.columnist_title.title %></strong>
              <br/>
            <% end %>
            <strong><%= columnist.user.name %></strong>
            <br/>
          </div>
        <% end %>
      <% else %>
        <p>
          Ainda n√£o existem colunistas cadastrados
        </p>
      <% end %>
    </div>
  </div>
</div>
