<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <div class="rst-breadcrumb">
        <a href="#"><span>Home</span></a>
        <span>></span>
        <a href="#"><span>Dados do Perfil ( Anunciante )</span></a>
      </div>
    </div>
  </div>
</div>

<section id="rst-account-page">
  <div class="container">
      <div class="row">
      <%= form_for(@announcer) do |f| %>
        <div class="col-sm-8">
          <div class="rst-section-title rst-section-title-box">
            <h4>Dados do perfil</h4>
          </div>
          <div class="rst-accsetting">
            <div class="rst-account-setting">
              <div class="rst-setting">
                <% if @announcer.banner.present? %>
                  <%= image_tag @announcer.banner.url(:medium) %>
                <% else %>
                  <img src="../images/user.png" alt="" />
                <% end %>
                <input id="input-banner" class="rst-pagebutton banner-button" type="submit" value="ALTERAR BANNER"/>
                <%= f.file_field :banner, class: 'image-button', id: 'image-button-banner' %>
              </div>
              <div class="rst-setting">
                <span><%= f.label :name, "Nome do Usuário" %></span>
                <%= f.text_field :name, value: @announcer.name, class: 'rst-pageinput' %>
              </div>
              <div class="rst-setting">
                <span><%= f.label :fantasy_name, "Nome fantasia" %></span>
                <%= f.text_field :fantasy_name, value: @announcer.fantasy_name, class: 'rst-pageinput' %>
              </div>
              <div class="rst-setting">
                <span><%= f.label :contact_name, "Nome do contato" %></span>
                <%= f.text_field :contact_name, value: @announcer.contact_name, class: 'rst-pageinput' %>
              </div>
              <div class="rst-setting">
                <span><%= f.label :email, "Email do contato" %></span>
                <%= f.text_field :email, value: @announcer.email, class: 'rst-pageinput' %>
              </div>
              <div class="rst-setting">
                <span><%= f.label :about_text, "Sobre a empresa" %></span>
                <%= f.text_area :about_text, value: @announcer.about_text, class: 'rst-pageinput' %>
              </div>
              <div class="rst-setting">
                <%= f.hidden_field :user, value: @announcer.user %>
              </div>
              <%= f.submit "SALVAR ALTERAÇÕES", class: 'rst-pagebutton' %>
            </div>
            <div class="rst-account-img">
              <% if @announcer.avatar.present? %>
                <%= image_tag @announcer.avatar.url(:medium) %>
              <% else %>
                <img src="../images/user.png" alt="" />
              <% end %>
              <input id="input-avatar" class="rst-pagebutton" type="submit" value="ALTERAR LOGO"/>
              <%= f.file_field :avatar, class: 'image-button', id: 'image-button-avatar' %>
            </div>
          </div>
        </div>
        <div class="col-sm-4">
            <div class="rst-section-title rst-section-title-box">
              <h4>Ofertas</h4>
            </div>
            <aside class="widget widget_adv">
              <a href="#"><%=  image_tag('ad01.png') %></a>
              <a href="#"><%=  image_tag('ad01.png') %></a>
              <a href="#"><%=  image_tag('ad01.png') %></a>
              <a href="#"><%=  image_tag('ad01.png') %></a>
              <div class="clear"></div>
            </aside>
            <div class="clear"></div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
