<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <div class="rst-breadcrumb">
        <a href="#"><span>Home</span></a>
        <span>></span>
        <a href="#"><span>Empresa</span></a>
      </div>
    </div>
  </div>
</div>

<%= form_for(@announcer) do |f| %>
  <section id="rst-catcontent-author">
    <div class="container">
      <div class="row">
        <div class="col-xs-12">
          <div class="rst-section-title rst-section-title-box">
            <%= f.submit "SALVAR ALTERAÇÕES", class: 'rst-pagebutton banner-input blue-bg' %>
            <h4><%= f.text_field :fantasy_name, value: @announcer.fantasy_name, class: 'rst-announcer-input' %></h4>
          </div>
          <div class="rst-author-contact">
            <% if @announcer.avatar.present? %>
              <%= image_tag @announcer.avatar.url(:medium) %>
            <% else %>
              <img src="../images/user.png" alt="" />
            <% end %>
            <div class="rst-author-contactinfo">
              <p>
                <%= show_telephone if @announcer.main_telephone.present? %>
                <%= show_edit_email(f) %>
                <%= show_location %>
                <%= show_average if @announcer.average('quality').present? %>
              </p>
            </div>
          </div>

          <!-- Logo Button -->
          <input id="input-avatar" class="rst-pagebutton blue-bg" type="submit" value="ALTERAR LOGO"/>
          <%= f.file_field :avatar, class: 'image-button', id: 'image-button-avatar' %>
          <!-- END -->

          <div class="rst-section-title rst-section-title-box">
            <h4>Sobre</h4>
          </div>
          <p class="rst-author-excerpt"><%= f.text_area :about_text, value: @announcer.about_text, class: 'text-area-announcer rst-announcer-input', placeholder: 'Descrição sobre a sua empresa' %></p>
          <%= f.hidden_field :user, value: @announcer.user %>
        </div>
      </div>
    </div>
  </section>


  <%= media_section_banner_edit(@announcer) %>

  <!-- Banner button -->
  <div class="container">
    <div class="margin-button">
      <input id="input-banner" class="rst-pagebutton blue-bg" type="submit" value="ALTERAR BANNER"/>
      <%= f.file_field :banner, class: 'image-button', id: 'image-button-banner' %>
    </div>
  </div>
  <!-- END -->
<% end %>
<!-- end form for announcer -->


  <section id="rst-newsandhot">
    <div class="container">
      <div class="row">
        <div class="col-xs-12">
          <div class="rst-section-title">
            <h4>Anúncios</h4>
          </div>
          <div class="rst-newsandhot-post">
            <div class="rst-newsandhot-post-content">
              <article>
                <% if @announcer.ads.present? %>
                  <div class="row">
                    <% @announcer.ads.each do |ad| %>
                      <div class="rst-postpic col-sm-4 rst-postpic-img">
                        <%= link_to ad do %>
                          <%=  image_tag ad.avatar.url %>
                        <% end %>
                        <%= link_to ad, class: 'rst-postpic-cat' do %>
                          <span><%= ad.title %></span>
                        <% end %>
                        <div class="add-image-actions">
                          <%= form_for ad do |ad| %>
                              <%= ad.hidden_field :active, value: "sim" %>
                              <%= ad.submit "Ativar", class: 'gallery-actions green-bg enable-ad-button' %>
                          <% end %>
                          <%= form_for ad do |ad| %>
                              <%= ad.hidden_field :active, value: "nao" %>
                              <%= ad.submit "Desativar", class: 'gallery-actions red-bg enable-ad-button' %>
                          <% end %>
                        </div>
                      </div>
                    <% end %>
                  </div>
                <% else %>
                  <div class='alert'>
                    Anúncios ainda não cadastrados
                  </div>
                <% end %>
              </article>
            </div>
          </div>
        </div>
      </div>
      <%= media_section_gallery_edit(@announcer) %>
    </div>
  </section>
  <section id="rst-latestcomments">
    <div class="container">
      <div class="row">
        <div class="col-xs-12">
          <div class="rst-section-title rst-section-title-box">
            <h4>Vagas de emprego</h4>
          </div>
          <div class="add-image-actions">
            <%= link_to new_vacancy_path, class: 'rst-pagebutton announcer-buttons-new blue-bg' do %>
              <i class="fa fa-plus" ></i>
            <% end %>
          </div>
          <div class="row commentlist owl-carousel">
            <% @announcer.vacancies.each do |vacancy| %>
              <div class="col-sm-12 comment" id="vacancy_<%= vacancy.id %>">
                <div class="comment-avatar">
                  <%= link_to vacancy do %>
                    <%= image_tag @announcer.avatar.url(:medium) %>
                  <% end %>
                </div>
                  <div class="comment-data">
                    <%= link_to vacancy, class: 'comment-author' do %>
                      <%= @announcer.fantasy_name %>
                    <% end %>
                    <span class="comment-time"><i class="fa fa-clock-o"></i><%= vacancy.created_at %></span>
                    <p class="comment-body"><%= vacancy.name %></p>
                    <%= link_to vacancy, class: 'vacancy-actions green-bg' do %>
                      <i class="fa fa-eye"></i>
                    <% end %>
                    <%= link_to edit_vacancy_path(vacancy), class: 'vacancy-actions blue-bg' do %>
                      <i class="fa fa-pencil-square-o"></i>
                    <% end %>
                    <%= link_to vacancy, method: :delete, data: { confirm: 'Tem certeza que deseja excluir essa vaga?' }, class: 'vacancy-actions red-bg', remote: true, id: "remove_vacancy_#{vacancy.id}" do %>
                      <i class="fa fa-trash"></i>
                    <% end %>
                  </div>
              </div>
              <% content_for :js do%>
                $('#remove_vacancy_<%= vacancy.id %>').bind('ajax:success', function(){
                  $('#vacancy_<%= vacancy.id %>').remove();
                  }
                );
              <%end%>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </section>
