<!-- Page Breadcrumb -->
<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <div class="rst-breadcrumb">
        <a href="#"><span>Home</span></a>
        <span>></span>
        <a href="#"><span>Cadastro de Usuário</span></a>
      </div>
    </div>
  </div>
</div>
<!-- End Page Breadcrumb -->

<!-- Section Register -->
<section id="rst-register-page">
  <div class="container">
    <div class="row">
      <div class="col-sm-8">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
          <div class="rst-section-title rst-section-title-box">
            <h4>Novo Usuário</h4>
          </div> <!-- end section title -->
          <div class="row">
            <div class="col-sm-6">
              <%= f.email_field :email, autofocus: true, placeholder: 'Email', class: 'rst-pageinput' %>
            </div>
            <div class="col-sm-6">
              <%= f.password_field :password, autocomplete: "off", placeholder: 'Senha', class: 'rst-pageinput' %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> caracteres no mínimo)</em>
              <% end %><br />
              <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Confirme a senha', class: 'rst-pageinput' %>
            </div>
            <div class="col-xs-12">
              <%= f.submit "Enviar", class: 'rst-pagebutton' %>
            </div>
          </div>
        <% end %>
      </div>
      <div class="col-sm-4">
        <%= form_for(resource, :as => resource_name, :url => session_path(:user)) do |f| %>
          <div class="rst-section-title rst-section-title-box">
            <h4>Login</h4>
          </div> <!-- end section title -->
          <%= f.email_field :email, autofocus: true, class: 'rst-pageinput' %>
          <%= f.password_field :password, autocomplete: "off", class: 'rst-pageinput' %>
          <%= f.submit "LOGIN", class: 'rst-pagebutton' %>
        <% end %>
      </div>
    </div>
  </div>
</section>
<!-- End Section Register -->
