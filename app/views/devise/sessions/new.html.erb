<!-- Section Register -->
<section id="rst-register-page">
  <div class="container">
    <div class="row">
      <div class="col-sm-8">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="rst-section-title rst-section-title-box">
            <h4>Login</h4>
          </div> <!-- end section title -->
          <div class="row">
            <div class="col-sm-6">
              <%= f.email_field :email, autofocus: true, placeholder: 'Email', class: 'rst-pageinput' %>
            </div>
            <div class="col-sm-6">
              <%= f.password_field :password, autocomplete: "off", placeholder: 'Senha', class: 'rst-pageinput' %>
            </div>
            <div class="col-sm-6">
              <%= f.submit "Login", class: 'rst-pagebutton' %>
            </div>
            <div class="col-sm-6">
              <p>Não é cadastrado? <%= link_to "Cadastrar-se", new_registration_path(resource_name) %></p>
              <p>Esqueceu sua senha? <%= link_to "Clique aqui", new_password_path(resource_name) %></p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
<!-- End Section Register -->
