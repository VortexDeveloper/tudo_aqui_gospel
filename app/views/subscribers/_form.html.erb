<!-- Section Register -->
<section id="rst-account-page">
  <div class="container">
    <div class="row">
      <%= form_for @subscriber, url: subscribers_update_path do |f| %>
        <div class="col-sm-8">
          <div class="rst-section-title rst-section-title-box">
            <h4>Informações do Assinante</h4>
          </div> <!-- end section title -->
          <div class="rst-accsetting">
            <div class="rst-account-setting">
              <div class="rst-setting">
                <span><%= f.label :church, "Igreja" %></span>
                <%= f.text_field :church, value: @subscriber.church, class: 'rst-pageinput' %>
              </div>
              <div class="rst-setting">
                <span><%= f.label :christian_denomination, "Denominação Cristã" %></span>
                <%= f.text_field :christian_denomination, value: @subscriber.christian_denomination, class: 'rst-pageinput' %>
              </div>
              <div class="rst-setting">
                <span><%= f.label :sex, "Sexo" %></span>
                <label>
                  <%= f.radio_button :sex, 'F', checked: (@subscriber.sex == 'F') %>
                  <%= f.label :sex, "Feminino" %> <br>
                  <%= f.radio_button :sex, 'M', checked: (@subscriber.sex == 'M') %>
                  <%= f.label :sex, "Masculino" %>
                </label>
              </div>
              <div class="rst-setting">
                <span><%= f.label :birth_date, "Data de Nascimento" %></span>
                <%= f.date_select :birth_date,
                      order: [:day, :month, :year],
                      start_year: Date.today.year - 100,
                      end_year: Date.today.year - 17,
                      value: @subscriber.birth_date,
                      class: 'rst-pageinput' %>
              </div>
              <div class="rst-setting">
                <span><%= f.label :christian, "É Cristão?" %></span>
                <label>
                  <%= f.radio_button :christian, 'S', checked: (@subscriber.christian == 'S') %>
                  <%= f.label :christian, "Sim" %> <br>
                  <%= f.radio_button :christian, 'N', checked: (@subscriber.christian == 'N') %>
                  <%= f.label :christian, "Não" %>
                </label>
              </div>
              <%= f.submit "SALVAR ALTERAÇÕES", class: 'rst-pagebutton' %>
            </div>
            <div class="rst-account-img">
              <% if @subscriber.avatar.present? %>
                <%= image_tag @subscriber.avatar.url(:medium) %>
              <% else %>
                <img src="../images/user.png" alt="" />
              <% end %>
              <input id="input-avatar" class="rst-pagebutton" type="submit" value="ALTERAR"/>
              <%= f.file_field :avatar, class: 'image-button', id: 'image-button-avatar' %>
            </div>
          </div>
        </div>
        <div class="col-sm-4">
          <div class="rst-section-title rst-section-title-box">
            <h4>Ofertas</h4>
          </div> <!-- end section title -->
          <aside class="widget widget_adv">
            <a href="#"><%=  image_tag('ad01.png') %></a>
            <a href="#"><%=  image_tag('ad01.png') %></a>
            <a href="#"><%=  image_tag('ad01.png') %></a>
            <a href="#"><%=  image_tag('ad01.png') %></a>
            <div class="clear"></div>
          </aside>
            <div class="clear"></div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>

<!-- End Section Register -->
